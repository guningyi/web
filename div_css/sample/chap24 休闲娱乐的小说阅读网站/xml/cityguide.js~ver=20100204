"MenuMania.cityguide".namespace();MenuMania.cityguide.Controller=Class.create();MenuMania.cityguide.Controller.prototype={DOM:{},widgets:{},initialize:function(){this.DOM.featured=$$(".mm-cg-featured")[0];this.DOM.features=$$(".mm-cg-features")[0];this.DOM.recently=$$(".mm-cg-recently")[0];this.DOM.bestFor=$$(".mm-cg-bestfor")[0];try{this.widgets.featureSlide=new MenuMania.widgets.SlideShow(this.DOM.featured,{nextSelector:".mm-cg-featured-next",prevSelector:".mm-cg-featured-prev"})}catch(a){}if(this.DOM.features){this.widgets.featuresTabs=new MenuMania.widgets.ButtonBar({bar:this.DOM.features.down(".mm-tabs ul.mm-tabs-list"),panelContainer:this.DOM.features.down(".mm-tabs"),barHandleSelector:"li a",activeHandleClass:"mm-active",activeHandleSelector:"li",panelSelector:".mm-tabs-tab",activePanelClass:"mm-active",preventDefault:true})}if(this.DOM.recently){this.widgets.recentlyTabs=new MenuMania.widgets.ButtonBar({bar:this.DOM.recently.down(".mm-tabs ul.mm-tabs-list"),panelContainer:this.DOM.recently.down(".mm-tabs"),barHandleSelector:"li a",activeHandleClass:"mm-active",activeHandleSelector:"li",panelSelector:".mm-tabs-tab",activePanelClass:"mm-active",preventDefault:true})}if(this.DOM.bestFor){this.widgets.bestForTabs=new MenuMania.widgets.ButtonBar({bar:this.DOM.bestFor.down(".mm-vtab ul.mm-vtab-list"),panelContainer:this.DOM.bestFor.down(".mm-vtab"),barHandleSelector:"li a",activeHandleClass:"mm-active",activeHandleSelector:"li",panelSelector:".mm-vtab-tab",activePanelClass:"mm-active",preventDefault:true})}$$(".mm-cg-suburbs .mm-more a")[0].observe("click",this.showMoreTags.bindAsEventListener(this));if($$(".mm-cg-cuisines")[0]){$$(".mm-cg-cuisines .mm-more a")[0].observe("click",this.showMoreTags.bindAsEventListener(this))}},showMoreTags:function(f){f.stop();var c=f.element();var a=c.up("li");var b=a.up(".mm-taglist").down(".mm-show-more");if(!b.visible()){c.update("Less&hellip;");b.appendChild(a);b.blindDown({duration:0.5})}else{c.update("More&hellip;");b.blindUp({duration:0.5});var d=c.up(".mm-taglist").down("ul");d.appendChild(a)}}};document.observe("dom:loaded",function(){new MenuMania.cityguide.Controller()});